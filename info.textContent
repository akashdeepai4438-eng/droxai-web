<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>DROX AI - Web App</title>
</head>
<body style="font-family:system-ui,Segoe UI,Roboto,Arial;display:flex;align-items:center;justify-content:center;height:100vh;">
  <div style="max-width:720px;padding:20px;text-align:center;">
    <h1>DROX AI</h1>
    <p id="info">Open this page from the DROX AI bot inside Telegram to see user info.</p>
    <pre id="data" style="text-align:left;white-space:pre-wrap;border:1px solid #ddd;padding:10px;border-radius:6px;"></pre>
    <p style="font-size:12px;color:#666;margin-top:10px;">This is a placeholder page. Replace with your app when ready.</p>
  </div>

  <script src="https://telegram.org/js/telegram-web-app.js"></script>
  <script>
    (function() {
      const dataEl = document.getElementById('data');
      const info = document.getElementById('info');
      if (window.Telegram?.WebApp) {
        const webApp = Telegram.WebApp;
        const initData = webApp.initData || 'no initData';
        info.textContent = 'Opened inside Telegram. Below is the init data from Telegram:';
        dataEl.textContent = JSON.stringify({ user: webApp.initDataUnsafe?.user || null, initData }, null, 2);
        webApp.expand(); 
      } else {
        info.textContent = 'Open this page from the DROX AI bot inside Telegram.';
        dataEl.textContent = 'Not opened inside Telegram Web App.';
      }
    })();
  </script>
</body>
</html>
